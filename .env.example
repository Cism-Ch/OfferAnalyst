# OfferAnalyst Environment Variables

# OpenRouter API Key (Required)
# Get your API key from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# MongoDB (Required for Phase 2+)
MONGODB_URI=

# Tigris Object Storage (S3-compatible)
TIGRIS_STORAGE_ACCESS_KEY_ID=
TIGRIS_STORAGE_SECRET_ACCESS_KEY=
TIGRIS_STORAGE_BUCKET=
TIGRIS_STORAGE_ENDPOINT=

# Tigris Search (Required for Phase 6)
TIGRIS_URI=
TIGRIS_CLIENT_ID=
TIGRIS_CLIENT_SECRET=

# Feature Flags
ENABLE_TIGRIS_SEARCH=false
ENABLE_EVENTS=false
